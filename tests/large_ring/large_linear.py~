		if i % 2 == 1 :
			curr_cmd = alt_cmd
		else :
			curr_cmd = cmd + Int2IP(IP2Int(radio_IP_addr_start) + i)  + " " + str(n_nodes) + " " + str(run_time - 30)
		

		curr_line = str(i) + "," + str(lattitude) + "," + str(longitude_start + i*longitude_increment) + "," + str(altitude) + "," + str(dilation) + "," + curr_cmd + "\n"
		f.write(curr_line)
		i = i + 1

