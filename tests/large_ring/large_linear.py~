	f.write(hosts_content)
	f.write("\n")
	i = 1
	while i <= n_nodes :
		curr_line = Int2IP(IP2Int(radio_IP_addr_start) + i) + " " + "radio-" + str(i) + "\n"
		f.write(curr_line)
		curr_line = Int2IP(IP2Int(node_IP_addr_start) + i) + " " + "node-" + str(i) + "\n"
